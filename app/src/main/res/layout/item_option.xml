<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_190dp"
    android:layout_height="@dimen/_56dp"
    android:background="@drawable/background_item_activity"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_24dp"
    android:paddingRight="@dimen/_24dp">

    <ImageView
        android:id="@+id/iconItemOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <Space
        android:layout_width="@dimen/_12dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/titleItemOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginRight="@dimen/_16dp"
        android:textColor="?android:textColorPrimary" />

</LinearLayout>